// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  username  String
  createdAt DateTime
  updatedAt DateTime
}

model Video {
  id              String    @id
  url             String?
  title           String
  description     String
  thumbnailUrl    String?
  thumbnailWidth  Int?
  thumbnailHeight Int?
  channelId       String
  viewCount       String?
  likeCount       String?
  commentCount    String?
  player          String?
  publishedAt     DateTime?
  tags            String[]

  playlists Playlist[]
  channel   Channel    @relation(fields: [channelId], references: [id])
}

model Channel {
  id              String  @id
  title           String?
  description     String?
  customUrl       String?
  thumbnailUrl    String?
  thumbnailWidth  Int?
  thumbnailHeight Int?
  viewCount       String?
  subscriberCount String?
  keyWords        String?
  image           String?

  videoCount         String?
  videos             Video[]
  myPlaylists        Playlist[] @relation(name: "OwnerChannel")
  playlistFromOthers Playlist[] @relation(name: "PlaylistToChannel")
}

model Playlist {
  id              String  @id
  name            String?
  description     String?
  status          String?
  htmlPlayer      String?
  thumbnailUrl    String?
  thumbnailWidth  Int?
  thumbnailHeight Int?

  ownerChannelId String
  ownerChannel   Channel @relation(name: "OwnerChannel", fields: [ownerChannelId], references: [id])

  videos   Video[]
  channels Channel[] @relation(name: "PlaylistToChannel")
}

model SearchQuery {
  id    String @id @default(uuid())
  query String
}
