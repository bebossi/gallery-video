// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  createdAt DateTime
  updatedAt DateTime

  playlists Playlist[]
}

model Video {
  id              String    @id
  url             String?
  title           String
  description     String
  thumbnailUrl    String?
  thumbnailWidth  Int?
  thumbnailHeight Int?
  channelId       String
  viewCount       Decimal?
  likeCount       Decimal?
  commentCount    Decimal?
  player          String?
  publishedAt     DateTime?
  tags            String[]
  categoryId      String?

  category  Category?  @relation(fields: [categoryId], references: [id])
  playlists Playlist[]
  channel   Channel    @relation(fields: [channelId], references: [id])
}

model Category {
  id     String  @id
  title  String
  videos Video[]
}

model Channel {
  id              String   @id
  title           String?
  description     String?
  customUrl       String?
  thumbnailUrl    String?
  thumbnailWidth  Int?
  thumbnailHeight Int?
  viewCount       Decimal?
  subscriberCount Decimal?
  keyWords        String?
  image           String?

  videoCount         Int?
  videos             Video[]
  myPlaylists        Playlist[] @relation(name: "OwnerChannel")
  playlistFromOthers Playlist[] @relation(name: "PlaylistToChannel")
}

model Playlist {
  id              String  @id
  name            String?
  description     String?
  status          String?
  htmlPlayer      String?
  thumbnailUrl    String?
  thumbnailWidth  Int?
  thumbnailHeight Int?

  users User[]

  ownerChannelId String
  ownerChannel   Channel @relation(name: "OwnerChannel", fields: [ownerChannelId], references: [id])

  videos   Video[]
  channels Channel[] @relation(name: "PlaylistToChannel")
}

model SearchQuery {
  id    String @id @default(uuid())
  query String
}
